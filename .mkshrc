function exitcode {
    if [ "$?" == "0" ]; then
        printf $'\E[90m'
    else
        printf $'\E[31m'
    fi
}

function git_branch {
    branch=$(git branch 2>/dev/null | grep \* | cut -d " " -f 2-)
    if [ -n "$branch" ]; then
        printf ' (%s) ' "$branch"
    else
        printf ' '
    fi
}

PS1='`exitcode`${PWD/#"$HOME"/\~}`git_branch`'$'\E[0m'

HISTFILE="$XDG_CONFIG_HOME/mksh/history"
HISTSIZE=10104096

bind ^[a=beginning-of-line
bind ^[e=end-of-line
bind ^L=clear-screen
bind -m ^[h='^ucd $HOME^[^e^m'

. "$XDG_CONFIG_HOME/mksh/key-bindings.mksh"
#. "$XDG_CONFIG_HOME/mksh/completion.mksh"
. "$XDG_CONFIG_HOME/aliasrc"

export GPG_TTY=$(tty)
